<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    android:padding="16dp"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/iv_img_kart_id"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/karts3d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_img_kart_id"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo_id"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/chappie_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_logo1_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="16dp"
                android:text="@string/tv_logo1_text"
                android:textColor="@color/red_color"
                android:textSize="28sp"
                android:typeface="monospace"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_logo2_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="16dp"
                android:text="@string/tv_logo2_text"
                android:textColor="@color/red_color"
                android:textSize="28sp"
                android:typeface="monospace"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_logo3_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/tv_logo3_text"
                android:textColor="@color/red_color"
                android:textSize="28sp"
                android:typeface="monospace"
                android:visibility="invisible" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>